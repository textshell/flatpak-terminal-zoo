
{
    "app-id": "de.uchuujin.fp.termzoo.kitty0_29_0",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.golang"
    ],
    "command": "kitty",
    "finish-args": [ "--socket=x11", "--socket=wayland", "--device=dri", "--talk-name=org.freedesktop.Flatpak"],
    "modules": [
        {
            "name": "librsync",
            "buildsystem": "cmake",
            "sources": [{
                "type": "archive",
                "url": "https://github.com/librsync/librsync/releases/download/v2.3.4/librsync-2.3.4.tar.gz",
                "sha256": "a0dedf9fff66d8e29e7c25d23c1f42beda2089fb4eac1b36e6acd8a29edfbd1f"
            }]
        },
        {
            "name": "kitty",
            "buildsystem": "simple",
            "build-options": {
                "append-path": "/usr/lib/sdk/golang/bin",
                "build-args": ["--share=network"]
            },
            "build-commands": [
                "python3 setup.py linux-package",
                "cp -r linux-package/* /app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/kovidgoyal/kitty/releases/download/v0.29.0/kitty-0.29.0.tar.xz",
                    "sha512": "d8d13dea92d21ad113e3f6b056b2ea31514e0893b04c2bac2665821bb66ec10fdadacbf19e22980e0e744ef9d272f2fc2b4981016b182509af2040b6f4267d3c"
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "install -D run-in-host /app/bin/run-in-host"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "../run-in-host"
                }
            ]
        }
    ]
}
