
{
    "app-id": "de.uchuujin.fp.termzoo.screen4_2_0",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "screen",
    "finish-args": ["--socket=x11", "--device=dri", "--talk-name=org.freedesktop.Flatpak"],
    "modules": [
        {
            "name": "screen",
            "buildsystem": "autotools",
            "build-options": {
                "ldflags": "-Wl,--copy-dt-needed-entries -L/app/lib",
                "make-args": [ "-j1" ],
                "env": { "LIBS": "-ltinfo" }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.kernel.org/gnu/screen/screen-4.2.0.tar.gz",
                    "sha512": "be9b04de668864c1e9ebabe76dc35be60ece15bda16d983d8fee0331ddbf6d732ca354a136cd602dda76baf155d8f324e1ef16cc10b4b13ee07c74d37af49350"
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "install -D run-in-host /app/bin/run-in-host"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "../run-in-host"
                }
            ]

        }
    ]
}
