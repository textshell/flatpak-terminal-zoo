
{
    "app-id": "de.uchuujin.fp.termzoo.screen3_9_15",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "screen",
    "finish-args": ["--socket=x11", "--device=dri", "--talk-name=org.freedesktop.Flatpak"],
    "modules": [
        {
            "name": "screen",
            "buildsystem": "autotools",
            "build-options": {
                "ldflags": "-Wl,--copy-dt-needed-entries -L/app/lib",
                "make-args": [ "-j1" ],
                "env": { "LIBS": "-ltinfo" }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://mirrors.kernel.org/gnu/screen/screen-3.9.15.tar.gz",
                    "sha512": "5b5654213bd7d63be9309801b63f7b7d90501c83fd9ac1c49bce9ec4203cc408170060c1f00839e3faeee994a2a8aa88911aee85230d0064ab8e05fc3cd192e4"
                }
            ]
        },
        {
            "name": "scripts",
            "buildsystem": "simple",
            "build-commands": [
                "install -D run-in-host /app/bin/run-in-host"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "../run-in-host"
                }
            ]

        }
    ]
}
